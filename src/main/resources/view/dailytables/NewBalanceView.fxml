<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.76-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="hu.kniznertamas.adminsystem.gui.controllers.dailytables.NewBalanceController"
            fx:id="mainGridPane">

    <Text text="Új adat" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font size="30.0"/>
        </font>
    </Text>

    <Label text="Nettó" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Bruttó" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="ÁFA" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text="ÁFA értéke" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label text="Dátum" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label text="modelName" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Label fx:id="modelIDLabel" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Label text="statusID" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <Label text="Készpénzes" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <Label text="Megjegyzés" GridPane.columnIndex="0" GridPane.rowIndex="10"/>

    <TextField fx:id="nettoField" prefHeight="36.0" promptText="Nettó érték" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="bruttoField" prefHeight="36.0" promptText="Bruttó érték" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <ComboBox fx:id="afaBox" prefHeight="36.0" prefWidth="200.0" promptText="ÁFA" GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>
    <!--TextField fx:id="customAfa" prefHeight="36.0" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3"/-->
    <TextField fx:id="afaValueField" editable="false" prefHeight="36.0" prefWidth="200.0" promptText="ÁFA értéke" GridPane.columnIndex="1"
               GridPane.rowIndex="4"/>
    <DatePicker fx:id="createdPicker" prefHeight="36.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <ComboBox fx:id="modelNameBox" prefHeight="36.0" prefWidth="200.0" GridPane.columnIndex="1"
              GridPane.rowIndex="6">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Alkalmazott"/>
                <String fx:value="Munka"/>
                <String fx:value="Egyéb"/>
            </FXCollections>
        </items>
    </ComboBox>
    <!--ComboBox fx:id="modelIdBox" prefHeight="36.0" prefWidth="200.0" GridPane.columnIndex="1"
              GridPane.rowIndex="7"/-->
    <ComboBox fx:id="statusIdBox" prefHeight="36.0" prefWidth="200.0" GridPane.columnIndex="1"
              GridPane.rowIndex="8"/>
    <CheckBox fx:id="cashBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    <TextField fx:id="noteField" prefHeight="36.0" prefWidth="200.0" promptText="Megjegyzés" GridPane.columnIndex="1"
               GridPane.rowIndex="10"/>
    <Button onAction="#onSaveAction" prefHeight="36.0" prefWidth="200.0" text="Mentés" GridPane.columnIndex="0"
            GridPane.rowIndex="11"/>
    <Button onAction="#onCancelAction" prefHeight="36.0" prefWidth="200.0" text="Mégse" GridPane.columnIndex="1"
            GridPane.rowIndex="11"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
