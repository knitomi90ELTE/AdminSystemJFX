<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.kniznertamas.adminsystem.gui.controllers.dailytables.UploadTableController">
    <HBox>
        <Label text="Órák">
            <padding>
                <Insets bottom="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <Button fx:id="addNewButton" onAction="#addNewAction" text="Új hozzáadása">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></Button>
      <padding>
         <Insets left="10.0" top="10.0" />
      </padding>
    </HBox>
    <TableView fx:id="uploadTable" prefHeight="270">
        <columns>
            <TableColumn prefWidth="100.0" text="Alkalmazott">
                <cellValueFactory>
                    <PropertyValueFactory property="user_name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Munka">
                <cellValueFactory>
                    <PropertyValueFactory property="project_name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Óraszám">
                <cellValueFactory>
                    <PropertyValueFactory property="hour" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Dátum">
                <cellValueFactory>
                    <PropertyValueFactory property="created" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Megjegyzés">
                <cellValueFactory>
                    <PropertyValueFactory property="note" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
