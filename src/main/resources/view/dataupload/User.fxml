<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<GridPane alignment="CENTER" hgap="10.0" prefHeight="768.0" prefWidth="1366.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.76-ea" fx:controller="hu.kniznertamas.adminsystem.gui.controllers.dataupload.UserController">

    <Text text="Alkalmazott" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font size="30.0"/>
        </font>
    </Text>

    <Label text="Név" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Órabér" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="Megjegyzés" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="nameField" prefHeight="50.0" prefWidth="200.0" promptText="Név" GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>
    <TextField fx:id="wageField" prefHeight="50.0" prefWidth="200.0" promptText="Órabér" GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
    <TextField fx:id="noteField" prefHeight="50.0" prefWidth="200.0" promptText="Megjegyzés" GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>
    <Button fx:id="saveButton" text="Mentés" onAction="#onSaveAction" GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="200.0" prefHeight="50.0"></Button>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
